generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// DIO Platform Models
model Agent {
  id          String   @id @default(cuid())
  name        String
  hostname    String
  status      String   @default("offline") // active, warning, offline
  rank        Int      @default(0) // R0 to R4
  cpu         Float    @default(0)
  memory      Float    @default(0)
  lastSeen    DateTime @default(now())
  threats     Int      @default(0)
  ipAddress   String
  osType      String
  version     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  evidences   Evidence[]
  metrics     AgentMetric[]
  
  @@map("agents")
}

model AgentMetric {
  id        String   @id @default(cuid())
  agentId   String
  cpu       Float
  memory    Float
  disk      Float
  network   Float
  processes Int
  timestamp DateTime @default(now())
  
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  @@map("agent_metrics")
}

model Evidence {
  id          String   @id @default(cuid())
  agentId     String
  type        String   // threat, anomaly, system_event
  severity    String   // low, medium, high, critical
  title       String
  description String
  rawData     String   // JSON data
  status      String   @default("open") // open, investigating, resolved
  confidence  Float
  timestamp   DateTime @default(now())
  
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  // Add missing fields for system_info
  hostname    String?
  ipAddress  String?
  osType     String?
  
  @@map("evidences")
}

model Threat {
  id          String   @id @default(cuid())
  name        String
  type        String   // malware, anomaly, intrusion
  severity    String   // low, medium, high, critical
  description String
  signature   String?
  status      String   @default("active") // active, contained, resolved
  detectedAt  DateTime @default(now())
  resolvedAt  DateTime?
  
  @@map("threats")
}

model SystemHealth {
  id            String   @id @default(cuid())
  component     String   // nerve_center, mesh_network, database
  status        String   // healthy, warning, critical
  cpu           Float
  memory        Float
  disk          Float
  network       Float
  uptime        Int
  lastCheck     DateTime @default(now())
  errorMessage  String?
  
  @@map("system_health")
}

model Event {
  id          String   @id @default(cuid())
  name        String
  type        String   // threat, anomaly, system, evidence
  severity    String   // low, medium, high, critical
  description String
  timestamp   DateTime @default(now())
  agentId     String?
  details     Json?    // JSON data - changed from String to Json
  status      String   @default("active") // active, acknowledged, resolved
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("events")
}